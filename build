#!/bin/bash -e
cd "$( dirname "${BASH_SOURCE[0]}" )"

pushd engine > /dev/null
NODE_ENV=development npm install
NODE_ENV=development npm install matter-js
npm run build
popd > /dev/null

for game in test-games/*; do
    pushd "$game" > /dev/null
    if [ -f package.json ]; then
        NODE_ENV=development npm install
        npm run build
    fi
    popd > /dev/null
done
