{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "align": [
            true,
            "arguments",
            "elements",
            "members",
            "parameters",
            "statements"
        ],
        "array-type": [
            true,
            "array"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsdoc-format": false,
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "(`|\"|').{80,}(`|\"|')"
            }
        ],
        "member-access": [
            true,
            "check-accessor",
            "check-constructor",
            "check-parameter-property"
        ],
        "member-ordering": false,
        "no-consecutive-blank-lines": true,
        "no-console": false,
        "no-default-export": true,
        "no-empty": false,
        "no-invalid-this": true,
        "no-shadowed-variable": false,
        "no-string-literal": false,
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-internal-module": true,
        "no-unused-expression": [
            true,
            "allow-fast-null-checks",
            "allow-new"
        ],
        "no-var-requires": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "object-literal-sort-keys": false,
        "only-arrow-functions": false,
        "ordered-imports": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        ],
        "triple-equals": true,
        "unified-signatures": false,
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/*"
        ]
    }
}
